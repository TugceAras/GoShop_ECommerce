<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashScreen"
    android:background="@color/main_color"
    >

    <LinearLayout
        android:id="@+id/splashLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="330dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/splashIcon"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_marginStart="64dp"
            android:src="@drawable/splash_screen_icon"
            app:layout_constraintVertical_bias="0.46" />

        <TextView
            android:id="@+id/logoName"
            android:layout_width="213dp"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/strangedreams"
            android:text="@string/goshop"
            android:textColor="@color/white"
            android:textSize="46sp"
            app:layout_constraintBottom_toBottomOf="@id/splashLinearLayout"
            app:layout_constraintVertical_bias="0.466" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
